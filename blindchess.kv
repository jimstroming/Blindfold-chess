BlindChessRoot:

<BlindChessRoot>:
  canvas.before:
    Color:
      rgba: 0.5, 0.5, 0.5, 1
    Rectangle:
      pos: self.pos
      size: self.size
  orientation: "vertical"
  BoxLayout:
    size_hint_y: 1
    Label:
      id: clockB
      font_size: '30dp'
      color: (0.2,0.2,0.2,1)
      text: '10:00'
      size_hint_x: 1.5
      canvas.before:
        PushMatrix
        Rotate:
          angle: 180
          origin: self.center
      canvas.after:
        PopMatrix
    Label:
      id: messageB
      color: (0.2,0.2,0.2,1)
      text: 'Press a Button to Start'
      size_hint_x: 3.5
      canvas.before:
        PushMatrix
        Rotate:
          angle: 180
          origin: self.center
      canvas.after:
        PopMatrix
    Label:
      id: mistakecountB
      color: (0.2,0.2,0.2,1)
      font_size: '30dp'
      text: '0'
      size_hint_x: 1
      canvas.before:
        PushMatrix
        Rotate:
          angle: 180
          origin: self.center
      canvas.after:
        PopMatrix
  BoxLayout:
    size_hint_y: 1
    Button:
      id: moveB
      text: 'move'
      color: (0.6,0.6,0.6,1)
      background_color: (.4,.4,.4,1)
      background_normal: ''
      size_hint_x: 3
      on_press:app.root.movebuttonpress('B')
      canvas.before:
        PushMatrix
        Rotate:
          angle: 180
          origin: self.center
      canvas.after:
        PopMatrix
    Label:
      size_hint_x: 2
    Button:
      id: cancelB
      text: 'cancel'
      color: (0.6,0.6,0.6,1)
      background_color: (.4,.4,.4,1)
      background_normal: '' 
      size_hint_x: 1
      on_press:app.root.cancelbuttonpress('B')
      canvas.before:
        PushMatrix
        Rotate:
          angle: 180
          origin: self.center
      canvas.after:
        PopMatrix

